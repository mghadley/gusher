<h1><%= $current_user.username %>!</h1>
<p>We're so happy to have you here</p>

<div>
	<%= erb :_post %>
</div>

<section>
	<h2>Gushers You Follow</h2>
	<% $current_user.following.each do |followee| %>
		<%= followee.username %>
	<% end %>
</section>

<section>
	<h2>Your Gushes</h2>
	<div class='gush'>
	<% $current_user.posts.each do |time, gush| %>
		<%= gush %>
	<% end %>
</section>
<br />